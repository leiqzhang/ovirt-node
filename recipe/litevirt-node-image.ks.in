# @DISTRO@ Node image recipe

%include common-install.ks
%include litevirt-@DISTRO@-install.ks

%include repos.ks

%packages --excludedocs --nobase
%include common-pkgs.ks
%include @DISTRO@-pkgs.ks
%include litevirt-@DISTRO@-pkgs.ks

%end

%post
%include common-post.ks
%include @DISTRO@-post.ks
%include litevirt-@DISTRO@-post.ks
%end

%post --nochroot
%include common-nochroot.ks
%include litevirt-@DISTRO@-nochroot.ks
%end

@IMAGE_MINIMIZER@

%post --nochroot --interpreter image-minimizer
%include litevirt-@DISTRO@-minimizer.ks
%end


@MANIFESTS_INCLUDED@
%include litevirt-@DISTRO@-manifest.ks
